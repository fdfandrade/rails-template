<div class="container no-vpadding">
    <div class="sign mainbox col-md-6 col-md-offset-3 no-vpadding">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title"><%= _('Forgot your password?') %></div>
            </div>
            <div class="panel-body">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
                <%= devise_error_messages! %>
                
                <div class="form-group">
                  <%= f.label :email, text: 'pp' %>
                  <%= f.email_field :email, class: 'form-control', autofocus: true %>
                </div>

                <button class="btn btn-primary btn-block" type="submit"><%= _('Send me reset password instructions') %></button>

                <% end %>
            </div>
        </div>
    </div>
</div>
